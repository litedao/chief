#!/usr/bin/env bash
### chief-help -- print help about chief(1) or one of its subcommands
### Usage: chief help [<command>]
###    or: chief <command> --help

BUGS=https://github.com/makerdao/chief/issues

name=chief
file=${0%-*}${1+-$1}

header=$(perl -ne 'print "$2\n" if /^(\S)\1\1(?: (.*))?/' "$file")

if ! [[ $header ]]; then
  sed "s/^/${0##*/}: /" "$file"
elif [[ $(wc -l <<<"$header") = 1 ]]; then
  echo "$header"
else
  sed "1{/^$name\\S* -- /d;}" <<<"$header"
fi

[[ $1 ]] && exit

for file in ${0%/*}/$name-*; do
  if [[ -L $file ]]; then
    continue
  else
    commands+=("$file")
  fi
done

list-commands() {
  cat "$@" |
  perl -ne 'print "$2 $3\n" if /^(\S)\1\1 '"$name"'-(\S+) -- (.*)/' |
  while read -r name label; do
    printf "   %-14s  %s\\n" "${name/-/ }" "$label"
  done | LANG=C sort
}

cat <<.

Commands:

$(list-commands "${commands[@]}")

Report bugs to <$BUGS>.
.
